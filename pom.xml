			<artifactId>workflow-aggregator </artifactId>
			<version>1.14</version>
		</dependency>
		<dependency>
			<groupId>org.jenkins-ci.plugins</groupId>
			<artifactId>cloudbees-folder</artifactId>
			<version>5.10</version>
		</dependency>
     </dependencies>
    
</project>
